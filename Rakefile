require 'rubygems'
require 'rake'
require 'bundler'
require 'echoe'

Echoe.new('gitsync', '0.0.1') do |p|
  p.description    = "Autosync changes to a monitored directory"
  p.url            = "http://github.com/nicinabox/gitsync"
  p.author         = "Nic Haynes"
  p.email          = "nic@nicinabox.com"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = ['trollop']
end